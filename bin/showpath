#!/usr/bin/env perl
use Env;
my $path = $ENV{PATH};
my $item = "";
if ($#ARGV > -1) {
  print "$ARGV[0] : $#ARGV\n";
  $path = $ARGV[0];
  if ($#ARGV > 0) {
    $item = $ARGV[1];
  }
}
my @pieces = ();
@pieces = split ' *(:|\s|,|;)', $path;
#if ($path =~ /:/) {@pieces = split /:/, $path;}
#else              {@pieces = split / /, $path;}
foreach my $piece (@pieces) {
  if (! ($piece ne ' ' and $piece !~ '(:|\s|,|;)')) {next;}
  print "$piece";
  if ($item) {
    my @list = glob $piece . "/*" . $item . "*";
    if ($#list > -1) {print "\n\t @list"};
  }
  print "\n";
}
exit 0;
